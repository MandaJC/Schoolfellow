<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fadingEdge="none" >
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#EEEEEE"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="50.0dip"
    android:paddingStart="0.0dip"
    android:paddingEnd="0.0dip"
    android:paddingTop="0.0dip" >


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_marginTop="10.0dip"
        android:gravity="center_vertical"
        android:paddingStart="17.0dip"
        android:text="个人资料"
        android:textColor="#ff888888"
        android:textSize="16.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingStart="0.0dip"
            android:shrinkColumns="0"
            android:stretchColumns="0" >

            <TableRow
                android:id="@+id/head"
                android:layout_width="fill_parent"
                android:layout_marginLeft="0.0dip"
                android:layout_marginRight="0.0dip"
                android:layout_marginBottom="1.0dip"
                android:paddingBottom="16.0dip"
                android:paddingTop="16.0dip"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="left"
                    android:includeFontPadding="false"
                    android:paddingStart="17.0dip"
                    android:text="头像"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp" />

                <ImageView
                    android:id="@+id/image_head"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:gravity="center_vertical"
                    android:paddingEnd="20.0dip"
                    android:src="@mipmap/ic_launcher" />

            </TableRow>

            <TableRow
                android:id="@+id/nickname"
                android:layout_width="fill_parent"
                android:layout_marginLeft="0.0dip"
                android:layout_marginRight="0.0dip"
                android:layout_marginBottom="1.0dip"
                android:paddingBottom="16.0dip"
                android:paddingTop="16.0dip"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="left"
                    android:includeFontPadding="false"
                    android:paddingStart="17.0dip"
                    android:text="昵称"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/view_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingEnd="20.0dip"
                    android:text="lzy"
                    android:layout_gravity="right"
                    android:textColor="#888888"
                    android:textSize="16.0sp" />
            </TableRow>

            <TableRow
                android:id="@+id/gender"
                android:layout_width="fill_parent"
                android:layout_marginLeft="0.0dip"
                android:layout_marginRight="0.0dip"
                android:layout_marginBottom="1.0dip"
                android:paddingBottom="16.0dip"
                android:paddingTop="16.0dip"
                android:clickable="true"
                android:background="@drawable/layout_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="left"
                    android:includeFontPadding="false"
                    android:paddingStart="17.0dip"
                    android:text="性别"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/view_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingEnd="20.0dip"
                    android:text="女"
                    android:layout_gravity="right"
                    android:textColor="#888888"
                    android:textSize="16.0sp" />
            </TableRow>


            <TableRow
                android:id="@+id/school"
                android:layout_width="fill_parent"
                android:layout_marginLeft="0.0dip"
                android:layout_marginRight="0.0dip"
                android:layout_marginBottom="1.0dip"
                android:paddingBottom="16.0dip"
                android:paddingTop="16.0dip"
                android:clickable="true"
                android:background="@drawable/layout_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="left"
                    android:includeFontPadding="false"
                    android:paddingStart="17.0dip"
                    android:text="学校"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/view_school"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingEnd="20.0dip"
                    android:text="中山大学"
                    android:layout_gravity="right"
                    android:textColor="#888888"
                    android:textSize="16.0sp" />
            </TableRow>

            <TableRow
                android:id="@+id/region"
                android:layout_width="fill_parent"
                android:layout_marginLeft="0.0dip"
                android:layout_marginRight="0.0dip"
                android:layout_marginBottom="1.0dip"
                android:paddingBottom="16.0dip"
                android:paddingTop="16.0dip"
                android:clickable="true"
                android:background="@drawable/layout_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="left"
                    android:includeFontPadding="false"
                    android:paddingStart="17.0dip"
                    android:text="地区"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/view_region"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingEnd="20.0dip"
                    android:text="广东 广州"
                    android:layout_gravity="right"
                    android:textColor="#888888"
                    android:textSize="16.0sp" />
            </TableRow>

            <TableRow
                android:id="@+id/sign"
                android:layout_width="fill_parent"
                android:layout_marginLeft="0.0dip"
                android:layout_marginRight="0.0dip"
                android:paddingBottom="16.0dip"
                android:paddingTop="16.0dip"
                android:clickable="true"
                android:background="@drawable/layout_selector">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="left"
                    android:includeFontPadding="false"
                    android:paddingStart="17.0dip"
                    android:text="个性签名"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/view_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="right"
                    android:includeFontPadding="false"
                    android:paddingEnd="20.0dip"
                    android:maxEms="12"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="事情总会一件一件一件一件地做完aaaaaaaaaaaa"
                    android:textColor="#888888"
                    android:textSize="16.0sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_marginTop="10.0dip"
        android:gravity="center_vertical"
        android:paddingStart="17.0dip"
        android:text="账号"
        android:textColor="#ff888888"
        android:textSize="16.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TableLayout
            android:id="@+id/MorePageTableLayout_Client"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingStart="0.0dip"
            android:shrinkColumns="0"
            android:stretchColumns="0" >

            <TableRow
                android:id="@+id/change"
                android:layout_width="fill_parent"
                android:layout_marginLeft="0.0dip"
                android:layout_marginRight="0.0dip"
                android:layout_marginBottom="1.0dip"
                android:paddingBottom="16.0dip"
                android:paddingTop="16.0dip"
                android:clickable="true"
                android:background="@drawable/layout_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:drawablePadding="10.0dip"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="17.0dip"
                    android:text="切换账号"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp" />

            </TableRow>

            <TableRow
                android:id="@+id/suggestion"
                android:layout_width="fill_parent"
                android:layout_marginLeft="0.0dip"
                android:layout_marginRight="0.0dip"
                android:layout_marginBottom="1.0dip"
                android:paddingBottom="16.0dip"
                android:paddingTop="16.0dip"
                android:clickable="true"
                android:background="@drawable/layout_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:drawablePadding="10.0dip"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="17.0dip"
                    android:text="意见反馈"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp" />

            </TableRow>

            <TableRow
                android:id="@+id/about"
                android:layout_width="fill_parent"
                android:layout_marginLeft="0.0dip"
                android:layout_marginRight="0.0dip"
                android:layout_marginBottom="1.0dip"
                android:paddingBottom="16.0dip"
                android:paddingTop="16.0dip"
                android:clickable="true"
                android:background="@drawable/layout_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:drawablePadding="10.0dip"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="17.0dip"
                    android:text="关于"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp" />

            </TableRow>

            <TableRow
                android:id="@+id/exit"
                android:layout_width="fill_parent"
                android:layout_marginLeft="0.0dip"
                android:layout_marginRight="0.0dip"
                android:paddingBottom="16.0dip"
                android:paddingTop="16.0dip"
                android:clickable="true"
                android:background="@drawable/layout_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:drawablePadding="10.0dip"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="17.0dip"
                    android:text="退出"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp" />

            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>